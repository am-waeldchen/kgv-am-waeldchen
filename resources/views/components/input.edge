<label for="{{name}}" class="block font-medium leading-6 text-gray-900">{{label}}</label>
<div class="mt-2">
  <input
    type="{{type}}"
    name="{{name}}"
    @if(value)
      value="{{value}}"
    @end
    class="block w-full rounded-sm border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6"
    placeholder="{{placeholder}}">
</div>
